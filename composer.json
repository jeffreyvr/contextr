{
  "name": "contextr/contextr",
  "description": "Determine context with AI.",
  "license": "MIT",
  "authors": [
    {
      "name": "Jeffrey van Rossum",
      "email": "jeffrey@vanrossum.dev"
    }
  ],
  "require": {
    "php": "^8.0|^8.1|^8.2",
    "openai-php/client": "^0.10.3",
    "symfony/http-client": "^7.2",
    "nyholm/psr7": "^1.8",
    "grok-php/client": "^1.3"
  },
  "require-dev": {
    "laravel/pint": "^1.4",
    "spatie/ray": "^1.36",
    "spatie/x-ray": "^1.1",
    "pestphp/pest": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Contextr\\": "src"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Contextr\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": "./vendor/bin/pint ./src/",
    "x-ray": "./vendor/bin/x-ray .",
    "prepare": [
      "@x-ray",
      "@format"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "pestphp/pest-plugin": true
    }
  }
}
